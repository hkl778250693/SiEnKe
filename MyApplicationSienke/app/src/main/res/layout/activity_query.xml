<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/root_linearlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_colors">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息查询"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            android:layout_alignParentRight="true"
            android:padding="15dp"/>
    </RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入用户编号:"
            android:button="@null"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="14sp"
            android:drawableLeft="@drawable/radio_drawable_selector"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingTop="18dp"
            android:paddingLeft="20dp"/>
        <LinearLayout
            android:id="@+id/radio_root1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/linearlayout_shape">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/input_user_number"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/edit_text1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="14sp"
                android:maxLength="13"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <RadioButton
            android:id="@+id/radio_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入表编号:"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="14sp"
            android:drawableLeft="@drawable/radio_drawable_selector"
            android:button="@null"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"/>
        <LinearLayout
            android:id="@+id/radio_root2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/linearlayout_shape">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/input_meter_number"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/edit_text2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="14sp"
                android:maxLength="13"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/query_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_selector"
            android:text="查询"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </RelativeLayout>

</LinearLayout>
