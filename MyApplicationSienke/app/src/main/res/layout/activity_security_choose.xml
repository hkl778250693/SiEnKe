<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_colors">

        <ImageView
            android:id="@+id/security_check_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@mipmap/securit_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安检选项"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/security_check_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_continue_security"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/continue_security"
                android:gravity="center"
                android:text="继续安检"
                android:textColor="#0088ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_user_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/user_list"
                android:gravity="center"
                android:text="用户列表"
                android:textColor="#0088ff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_no_check_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/no_check_user"
                android:gravity="center"
                android:text="未检用户"
                android:textColor="#0088ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_new_paln"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/new_plan"
                android:gravity="center"
                android:text="新增计划"
                android:textColor="#0088ff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_security_statistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/securit_statistics"
                android:gravity="center"
                android:text="安检统计"
                android:textColor="#0088ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_choose_mission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/choose_mission"
                android:gravity="center"
                android:text="任务选择"
                android:textColor="#0088ff"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/gray_thin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/text_option_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/option_btn"
            android:gravity="center"
            android:text="选项"
            android:textColor="#0088ff"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/text_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/transfer"
            android:gravity="center"
            android:text="传输"
            android:textColor="#747474"
            android:textSize="10sp" />
    </RadioGroup>

</LinearLayout>