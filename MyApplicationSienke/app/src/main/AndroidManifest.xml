<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.myapplicationsienke">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SecurityGuideActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //移动查询
        <activity android:name=".activity.QueryActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.CostListviewActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.CostDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BusinessManageActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BusinessManageLoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BusinessCheckActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.MoreSettingsActivity" android:screenOrientation="portrait"/>

        //安检
        <activity android:name=".activity.MobileSecurityLoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SecurityChooseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewTaskActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.NoCheckUserListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.TaskChooseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SecurityStatisticsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.UserDetailInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.UserListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.UploadActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.FileManageActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.IpSettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SystemSettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewTaskDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.ContinueCheckUserActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.MyPhotoGalleryActivity" android:screenOrientation="portrait"/>
    </application>


</manifest>