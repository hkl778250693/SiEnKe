<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.myapplicationsienke">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MobileSecurityLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //移动查询
        <activity android:name=".activity.QueryActivity"/>
        <activity android:name=".activity.CostListviewActivity"/>
        <activity android:name=".activity.CostDetailActivity"/>
        <activity android:name=".activity.BusinessManageActivity"/>
        <activity android:name=".activity.BusinessManageLoginActivity"/>
        <activity android:name=".activity.BusinessCheckActivity"/>
        <activity android:name=".activity.MoreSettingsActivity"/>

        //安检
        <activity android:name=".activity.SecurityChooseActivity" />
        <activity android:name=".activity.CheckUserListActivity"/>
        <activity android:name=".activity.NewTaskActivity"/>
        <activity android:name=".activity.NoCheckUserListActivity"/>
        <activity android:name=".activity.TaskChooseActivity"/>
        <activity android:name=".activity.SecurityStatisticsActivity"/>
        <activity android:name=".activity.UserDetailInfoActivity"/>
        <activity android:name=".activity.UserListActivity"/>
        <activity android:name=".activity.UploadActivity"/>
        <activity android:name=".activity.DownloadActivity"/>
        <activity android:name=".activity.FileManageActivity"/>
        <activity android:name=".activity.IpSettingActivity"/>
        <activity android:name=".activity.SystemSettingActivity"/>
        <activity android:name=".activity.NewTaskDetailActivity"/>
        <activity android:name=".activity.ContinueCheckUserActivity"/>
        <activity android:name=".activity.EdiTextListViewActivity"/>
        <activity android:name=".activity.MyPhotoGalleryActivity"/>

    </application>


</manifest>